{
  "name": "components-template",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && webpack --config webpack.config.js -d",
    "build-watch": "npm run clean && webpack --config webpack.config.js -d --watch",
    "start": "webpack-dev-server --config webpack.config.js --progress --colors",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "lint": "eslint ./src",
    "hook-install": "precommit install",
    "hook-remove": "precommit remove",
    "test": "JEST_SUITE_NAME=\"Unit Tests\" JEST_JUNIT_OUTPUT=\"./test-reports/junit.xml\" jest",
    "test:watch": "yarn test -- --watch",
    "resetGitLock": "rm -f ./.git/index.lock"
  },
  "precommit": [
    "yarn lint && yarn test"
  ],
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!src/config/**",
      "!src/assets/**",
      "!src/fonts/**",
      "!src/styles/**"
    ],
    "testRegex": "(/__tests__/.*|(\\.spec)\\.js?$)",
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.5",
    "immutable": "^3.8.1",
    "react": "^15.4.2",
    "react-autobind": "^1.0.6",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^4.1.1",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-preset-env": "^1.2.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "chai": "^3.5.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "jest-junit": "^1.3.0",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "resolve-url-loader": "^2.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.1",
    "sinon": "^2.1.0",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
